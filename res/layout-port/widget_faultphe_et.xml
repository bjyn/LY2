<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="38dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/shape_rectangle_gray_border"
    android:padding="10dp" >

    <AutoCompleteTextView
        android:id="@+id/fault_phe_et"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="center_vertical|left"
        android:hint="@string/please_input_fault_phe"
        android:maxLength="32"
        android:paddingLeft="7dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <Button
        android:id="@+id/fault_phe_or_fb_status_clean_btn"
        android:layout_width="21dp"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:background="@drawable/textview_clean"
        android:gravity="center" />

</LinearLayout>