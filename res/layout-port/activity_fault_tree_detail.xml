<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0F7DCC" >

        <Button
            android:id="@+id/tree_group_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0F7DCC"
            android:text="龙源集团"
            android:textColor="#ffffff" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff" >
        </LinearLayout>

        <Button
            android:id="@+id/tree_comp_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#0F7DCC"
            android:text="项目公司"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/tree_group_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/fragment_flag" />

        <ImageView
            android:id="@+id/tree_comp_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/fragment_flag" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/tree_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
        </ScrollView>

        <LinearLayout
            android:id="@+id/tree_feedback_btns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/tree_ok_btn"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:background="@drawable/tree_detail_ok_shape"
                android:text="确定"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/tree_cancel_btn"
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/tree_detail_cancel_shape"
                android:text="取消" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
