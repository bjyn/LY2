<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="240dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_round_corner_five"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="请输入原密码"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/original_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rectangle_blue_border"
        android:digits="qwertyuiopasdfghjklzxcvbnm1234567890"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入新密码"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/new_pwd_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rectangle_blue_border"
        android:digits="qwertyuiopasdfghjklzxcvbnm1234567890"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再次输入新密码"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/new_pwd_second_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_rectangle_blue_border"
        android:digits="qwertyuiopasdfghjklzxcvbnm1234567890"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp" >

        <Button
            android:id="@+id/feedback_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="@string/cancle"
            android:textColor="#3d9bef"
            android:textSize="17sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:text="@string/confirm"
            android:textColor="#3d9bef"
            android:textSize="17sp" />
    </LinearLayout>

</LinearLayout>